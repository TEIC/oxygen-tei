cell =
  
  ## contains one cell of a table. 
  element cell { cell.content, cell.localattributes }
cell.content = macro.paraContent
cell.localattributes =
  att.global.attributes, att.tableDecoration.attributes, empty
figDesc =
  
  ## (description of figure) contains a brief prose description of the appearance or content
  ## of a graphic figure, for use when documenting an image without
  ## displaying it.
  element figDesc { figDesc.content, figDesc.localattributes }
figDesc.content = macro.limitedContent
figDesc.localattributes = att.global.attributes, empty
figure =
  
  ## groups elements representing or containing graphic information such as an illustration or
  ##     figure.
  element figure { figure.content, figure.localattributes }
figure.content =
  (model.headLike
   | model.pLike
   | figDesc
   | model.graphicLike
   | model.egLike
   | floatingText
   | model.global)*
figure.localattributes =
  att.global.attributes,
  att.placement.attributes,
  att.typed.attributes,
  empty
formula =
  
  ## contains a mathematical or other formula.
  element formula { formula.content, formula.localattributes }
formula.content = (text | model.graphicLike)*
formula.localattributes =
  att.global.attributes,
  
  ## supplies the name of a previously defined notation used for the content of the element.
  attribute notation { data.code }?,
  empty
row =
  
  ## contains one row of a table. 
  element row { row.content, row.localattributes }
row.content = cell+
row.localattributes =
  att.global.attributes, att.tableDecoration.attributes, empty
table =
  
  ## contains text displayed in tabular form, in rows and columns.
  element table { table.content, table.localattributes }
table.content = (model.headLike | model.global)*, (row, model.global*)+
table.localattributes =
  att.global.attributes,
  
  ## indicates the number of rows in the table.
  attribute rows { data.count }?,
  
  ## (columns) indicates the number of columns in each row of the table.
  attribute cols { data.count }?,
  empty
